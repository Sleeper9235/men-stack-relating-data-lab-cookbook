<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Recipe</title>
  </head>
  <body>
  
    <h1>Create a new Recipe</h1>
    <form action="/ingredients" method="POST">
      <label for="name">Name</label>
      <input type="text" name="name" id="name" /> 
      <button type="submit">Add Ingredient to list</button>
    </form>
    <div>
      <label for="ingredients">Select your ingredients:</label>
      <select name="ingredients">
        <% ingredients.forEach((ingredient) => { %>
        <option name="ingredients" value="<%= ingredient.id %>"><%= ingredient.name %></option>
        <% }) %>
      </select>
      <button type="submit">Add to Recipe</button>
    </div>
    <form action="/recipes" method="POST" >
        <label for="name">Name</label>
        <input type="text" name="name" id="name">
        <label for="instructions">Instructions</label>
        <textarea name="instructions" id="instructions"></textarea>
        <h3">Selected Ingredients</h3>
        <div id="ingredients">
          <select name="ingredients" multiple>
            <% ingredients.forEach((ingredient) => { %>
            <option name="ingredients" value="<%= ingredient.id %>"><%= ingredient.name %></option>
            <% }) %>
          </select>
      </div>
        <button type="submit">Add Recipe</button>
    </form>
  </body>
</html>